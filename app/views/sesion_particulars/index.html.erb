

<h1>Sesion Particular Del Paciente : <%= @paciente.name %> <%= @paciente.last_name %></h1>

<div class="container bg p-3">
  <div class="row">
    <% @paciente.sesion_particulars.each_slice(4) do |row| %>
      <% row.each do |pac| %>
        <div class="col-3">
          <div class="card">
            <div class="card-body">
              <h5> Cita: <%= pac.cita %> </h5>
                            <!-- Button trigger modal -->
              <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
                Info
              </button>

              <!-- Modal -->
              <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Numero de Cita: <%= pac.numero_cita %> </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">

                      <p> Descripcion: <%= pac.descripcion_sesion.html_safe %> </p>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>

              <p>Numero de Cita: <%= pac.numero_cita %></p>
              <%= link_to 'Show', pac %>
              <td><%= link_to 'Edit', edit_sesion_particular_path(pac) %></td>
              <td><%= link_to 'Destroy', pac, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top:20px;"> </div>
    <% end %>
  </div>
  <%= link_to 'New Sesion Particular',  new_paciente_sesion_particular_path(@paciente) %>
</div>
