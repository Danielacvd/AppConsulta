<p id="notice"><%= notice %></p>

<h1>Tratamientos</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Plan</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @paciente.tratamientos.each do |tratamiento| %>
      <tr>
        <td><%= tratamiento.name %></td>
        <td><%= tratamiento.plan %></td>
        <td><%= link_to 'Show', tratamiento %></td>
        <td><%= link_to 'Edit', edit_tratamiento_path(tratamiento) %></td>
        <td><%= link_to 'Destroy', tratamiento, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

