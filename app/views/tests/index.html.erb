<h1>Tests</h1>

<table class="table" border="1">
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Foto</th>
      <th>Diagnostico</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tests.each do |test| %>
      <tr>
        <td><%= test.name %></td>
        <td><%= image_tag test.photo, size: "64x64" %></td>
        <td><%= test.diag %></td>
        <td><%= link_to 'Show', test %></td>
        <td><%= link_to 'Edit', edit_paciente_test_path(test, @paciente) %></td>
        <td><%= link_to 'Destroy', test, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

