

<h2>Sesiones Colegio Del Paciente : <%= @tratamiento.paciente.name %> <%= @tratamiento.paciente.last_name %></h2>



<div class="container bg p-3">
  <div class="row">
    <% @sesiones_colegio.each_slice(4) do |row| %>
      <% row.each do |pac| %>
        <div class="col-3">
          <div class="card">
            <div class="card-body">
              <span class="icon">P</span>
              <h5> Cita: <%= pac.cita %> </h5>
                            <!-- Button trigger modal -->
              <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModalLong_paciente_<%= pac.id %>">
                Detalle cita
              </button>

              <!-- Modal -->
              <div class="modal fade" id="exampleModalLong_paciente_<%= pac.id %>" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
                <div class="modal-dialog modal-dialog-scrollable" role="document">
                  <div class="modal-content">
                    <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLongTitle">Numero de Cita: <%= pac.numero_cita %> </h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                      </button>
                    </div>
                    <div class="modal-body">

                      <p> Descripcion: <%= pac.descripcion.html_safe %> </p>

                    </div>
                    <div class="modal-footer">
                      <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                </div>
              </div>

              <h5>Numero de Cita: <%= pac.numero_cita %></h5>
              <%= link_to 'Tratamientos del Paciente', paciente_tratamientos_path, class: "btn btn-secondary" %>
              
              <td><%= link_to 'Edit', pac, class: "btn btn-primary" %></td>
              <td><%= link_to 'Destroy', pac, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger" %></td>
            </div>
          </div>
        </div>
      <% end %>
      <div class="w-100" style="margin-top:20px;"> </div>
    <% end %>
  </div>
  <%= link_to 'New Sesion Colegio',  new_paciente_tratamiento_sesion_colegio_path(@tratamiento.paciente, @tratamiento), class: "btn btn-light"%>


</div>
